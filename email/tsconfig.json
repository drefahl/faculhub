{
  "compilerOptions": {
    "composite": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".react-email",
  ],
  "ts-node": {
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ]
  }
}