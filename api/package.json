{
  "name": "faculhub-api",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "build": "run-s build:email build:api",
    "build:api": "rimraf dist && tsc && tsc-alias",
    "build:email": "cd email && pnpm build && cd ..",
    "lint": "tsc --noEmit",
    "format": "biome check --linter-enabled=false --write src",
    "test": "run-s test:unit test:integration",
    "test:unit": "vitest run ./tests/unit",
    "test:unit:watch": "vitest --watch ./tests/unit",
    "test:integration:run": "vitest run --config ./vitest.integration.config.ts ./tests/integration",
    "test:integration": "run-s docker:up test:integration:run docker:down",
    "test:integration:watch": "vitest --watch --config ./vitest.integration.config.ts ./tests/integration",
    "docker:up": "docker compose up -d --remove-orphans --wait",
    "docker:down": "docker compose down",
    "generate-swagger": "ts-node -r tsconfig-paths/register --transpile-only scripts/generate-swagger.ts",
    "before-commit": "run-s lint format build test",
    "prisma:seed": "prisma db seed",
    "prisma:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "prisma:generate": "dotenv -e .env.development -- prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@prisma/client": "6.6.0",
    "@react-email/render": "^1.1.2",
    "bcryptjs": "^3.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "email": "./email/dist",
    "fastify": "^5.2.2",
    "fastify-socket.io": "^5.1.0",
    "fastify-type-provider-zod": "^4.0.2",
    "file-type": "^21.0.0",
    "google-auth-library": "^9.15.1",
    "jose": "^5.10.0",
    "pino-pretty": "^13.0.0",
    "resend": "^4.5.1",
    "socket.io": "^4.8.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@paralleldrive/cuid2": "^2.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.13.17",
    "@types/react": "^19.1.4",
    "@types/supertest": "^6.0.3",
    "dotenv-cli": "^8.0.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.6.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.13",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  }
}
