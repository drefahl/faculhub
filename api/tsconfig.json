{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.13.1",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "@react-email/render",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/email/*": [
        "../email/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "prisma/**/*.ts",
    "vitest.setup.ts",
    "../email/**/*.{ts,tsx}",
  ],
  "exclude": [
    "**/node_modules",
    "dist",
  ]
}